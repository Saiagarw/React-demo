
    {
      "env": {
        "browser": true,
        "es2021": true,
        "jest": true
      },
      "extends": [
        "airbnb",
        "prettier"
      ],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "rules": {
        "react/react-in-jsx-scope": "off",
        "quotes": "off",
        "linebreak-style": 0,
        "jsx-a11y/label-has-associated-control": "off",
        "indent": ["error", 4],                         
        "comma-dangle": ["error", "always-multiline"],   
        "semi": ["error", "always"],                
        "arrow-parens": ["error", "always", { "requireForBlockBody": true }]
      }
    }
  
